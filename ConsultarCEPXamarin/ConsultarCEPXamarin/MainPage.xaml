             x:Class="ConsultarCEPXamarin.MainPage">

    <StackLayout Padding="10,30,10,5">
        <Image x:Name="logo"/>
        <Entry x:Name="etCep" TextColor="Black" BackgroundColor="White" Placeholder="Digite o CEP" PlaceholderColor="Orange"/>
        <Button x:Name="btnBuscarCep" Text="Buscar CEP" TextColor="White" BackgroundColor="Blue"/>
